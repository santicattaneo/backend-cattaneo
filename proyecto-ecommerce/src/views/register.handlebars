<div class="hero d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-5 d-flex flex-column align-items-center justify-content-center">
                <img src="./appleLogo.svg" alt="simbolo" class="appleLogo">
                <p class="logoIstore">iStore</p>
            </div>
            <div class="col-7">
                <div class="loginContainer">
                    <h1>Registrarse</h1>
                    <form id="registerForm">
                        <div class="row">
                            <div class="col">
                                <label class="mt-3">Nombre</label>
                                <input name="first_name"></input>
                            </div>
                            <div class="col">
                                <label class="mt-3">Apellido</label>
                                <input name="last_name"></input>
                            </div>
                        </div>
                        <label class="mt-3">Email</label>
                        <input name="email"></input>
                        <label class="mt-3">Edad</label>
                        <input name="age"></input>
                        <label class="mt-3">Contraseña</label>
                        <input type="password" name="password"></input>
                        <input class="mt-4 btn-login" value="Registrarse" type="submit">
                    </form>
                    <p class="mt-4">Tienes cuenta? <a href="/login">Iniciar sesión</a></p>
                    <hr class="mt-5 mb-5"/>
                    <div>
                        <a href="/api/sessions/github"><button class="btnStyle">Ingresar con GitHub</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/register.js"></script>